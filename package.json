{
  "name": "devcontainer-editor",
  "displayName": "Devcontainer.json Editor",
  "description": "Edit devcontainer.json files with a user-friendly UI",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:devcontainerEditor.view",
    "onStartupFinished",
    "workspaceContains:**/devcontainer.json",
    "workspaceContains:**/.devcontainer/devcontainer.json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "devcontainer-editor",
          "title": "Devcontainer Editor",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "devcontainer-editor": [
        {
          "id": "devcontainerEditor.view",
          "name": "Devcontainer Editor",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "devcontainerEditor.rebuild",
        "title": "Rebuild Dev Container"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": [
          "/devcontainer.json",
          "/.devcontainer/devcontainer.json"
        ],
        "url": "https://containers.dev/implementors/json_schema/devContainerSchema.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.1.3",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.24.0",
    "glob": "^7.1.6",
    "typescript": "^4.2.4",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "jsonc-parser": "^3.0.0"
  }
}